  <div class="box no-border">

      <% @tweets.each do |tweet| %>
      <% if current_user.following?(tweet.user) || current_user?(tweet.user) %>

      <article class="media">
          <div class="media-left">
              <figure class="image is-64x64">
                  <%= gravatar_image_tag(tweet.user.email, size: 64, alt: tweet.user.fullname) %>

              </figure>
          </div>

          <div class="media-content">
              <div class="content tweet-org mb-0">
                  <div>
                      <%= link_to tweet.user.fullname, user_path(tweet.user), class: 'post-author' %><br>
                      <small>@<%= link_to tweet.user.username, user_path(tweet.user), class: 'post-author' %></small><br />

                      <div class="is-flex is-justify-content-space-between like">
                          <p><%= tweet.content %> </p>

                      </div>
                      <div class="likke mt-2 pt-1"><%= tweet.likes.count %>
                          <%= like_or_dislike_btn(tweet) %></div>

                  </div>
                  <div class="tweet-icon is-flex">
                      <div class="mt-3">
                          <%= link_to tweet, class: 'level-item' do %>
                          <span class="icon">
                              <i class="fa fa-link" aria-hidden="true"></i>
                          </span>
                          <% end %>
                          <% if current_user==tweet.user %>

                          <%= link_to edit_tweet_path(tweet), class: 'level-item edit' do %>
                          <span class="icon">
                              <i class="fa fa-pencil" aria-hidden="true"></i>
                          </span>
                          <% end %>

                          <%= link_to tweet, method: :delete, data: {confirm: "Are you sure you want to delete this tweet?"}, class: 'level-item delet' do %>
                          <span class="icon">
                              <i class="fa fa-trash-o"  aria-hidden="true"></i>
                          </span>
                          <% end %>
                          <% end %>
                      </div>

                  </div>
              </div>
              <nav class="block">

                  <div class='post-comments-section'>
                      <div class="pl-2">
                          <%= render partial: 'replies/reply', collection: tweet.replies %>

                          <%= form_for(tweet.replies.new, url: tweet_replies_path(tweet)) do |form| %>
                          <div class="reply-input"><%= form.text_field :content, label: "Tweet about it", input_html: { class: "input"},
                                                  wrapper: false, label_html: {class: "label"}, placeholder: "Reply this tweet.",
                                                  autofocus: true %></div>
                          <%= form.button :submit, class: "button is-info mt-1" %>
                          <% end %>
                      </div>
                  </div>

              </nav>
          </div>

      </article>
      <% end %>

      <% end %>
  </div>