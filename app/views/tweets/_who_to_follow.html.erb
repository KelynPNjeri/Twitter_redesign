
<div class="column wtf-panel pl-0 pr-6 py-5">
    <nav class="panel">
        <p class="panel-heading">Who To Follow</p>

        <% @not_followed.each do |user| %>
        <article class="media">
            <div class="justify column">
            <div class="is-flex">
                <figure class="image is-32x32">
                    <%= gravatar_image_tag(user.email, size: 64, alt: user.fullname) %>
                </figure>
                <div class="ml-2">
                    <p> <%= link_to user.fullname, user_path(user) %><br>
                    </p>
                    <p>@<%= link_to user.username, user_path(user) %><br>
                    </p>
                </div>
                </div>
            </div>
            <div class="media-content">
                <div class="content">

                    </p>
                </div>
            </div>
        </article>
        <%end %>
    </nav>
</div>