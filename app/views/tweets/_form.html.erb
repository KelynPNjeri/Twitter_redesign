<%= simple_form_for(@tweet) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :content, label: "Tweet about it", input_html: { class: "input "},
     wrapper: false, label_html: {class: "label"}, placeholder: "What's on your mind?", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>