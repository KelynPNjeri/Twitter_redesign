<div class="columns">
 
 <div class="column px-5">

<section class="users-section">
  <div class="media-left mr-0 pt-3">
              <figure class="image profile-pic">
                  <%= gravatar_image_tag(@user.email, size: 64, alt: @user.name) %>

              </figure>

          </div>


    <article class="timeline">
       <ul class="posts">
    

    <h3 class="box title mb-0 no-border">All Tweets</h3>
    <ul class="posts">
    <% unless @user.tweets.empty? %>
      <%= render 'tweets/tweet' %>
        <%else %>
      <p>This user does not have posts.</p>
        <%end %>

    </ul>
  </article>
</section>
    </div>
     <%= render 'profile' %> 

    </div>
